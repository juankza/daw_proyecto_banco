<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/api">
    <Resource
        type="javax.sql.DataSource"
        auth="Container"
        name="jdbc/MySQLDS"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/banco"
        username="banco"
        password="banco"

        maxTotal="5"
        maxIdle="3"
        maxWaitMillis="1000"
        validationQuery="SELECT 1 FROM dual"
    />
</Context>
