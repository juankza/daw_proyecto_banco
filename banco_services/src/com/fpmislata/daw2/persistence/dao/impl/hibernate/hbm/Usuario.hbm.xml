<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class name="com.fpmislata.daw2.business.domain.Usuario" table="usuario">
        
        <id column="idUsuario" name="idUsuario" >
             <generator class="identity" />
        </id>
        
        <property column="nombre" name="nombre" />
        
        <property column="apellidos" name="apellidos" />
        
        <property column="dni" name="dni" />
        
        <property column="email" name="email" />
        
        <property column="apodo" name="apodo" />
        
        <property column="contrasena" name="contrasena" />
        
        <property column="rol" name="rol" >
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.fpmislata.daw2.business.domain.Rol</param>
                <param name="type">12</param>
            </type>
        </property>
        
    </class>
    
</hibernate-mapping>
